    color: #444444;
    left: 20.9rpx;
}
.price{
    line-height: 90.7rpx;
    position: fixed;
    left: 150rpx;
    color: #ffffff;
    bottom: 0;
    font-size: 41.3rpx;
}
.menu_wrap{
    display: flex;
    flex-direction: row;
    height: 100%;
    margin-bottom: 90.7rpx;
    overflow-y: scroll;
    z-index: 500;
}
.menu_item_wrap{
    background-color: #F6F6F6;
    overflow-y: auto;
    margin-bottom: 90.7rpx;
}
.menu_item{
    text-align: center;
    width: 106.7rpx;
    background-color: #F6F6F6;
    color: #3c3c3c;
    font-size: 27.1rpx;
    padding-top: 25rpx;
    padding-bottom: 25rpx;
    padding-left: 35rpx;
    padding-right: 35rpx;
