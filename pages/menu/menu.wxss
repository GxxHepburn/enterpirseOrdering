}
.menuItemSelected{
    background-color: #ffffff;
}
.menu_item_number{
    width: 40.71rpx;
    height: 40.71rpx;
    line-height: 40.71rpx;
    color: #ffffff;
    background-color: #F34B40;
    border-radius: 50%;
    font-size: 25rpx;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    font-weight: 100;
    text-align: center;
    visibility: hidden;
}
.showNumber{
    visibility: visible;
}
.menu_item_food_wrap{
    overflow-y: scroll;
    flex: 1;
    margin-bottom: 90.75rpx;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.menu_title{
    line-height: 50rpx;
    font-size: 40rpx;
    padding-left: 30rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: dashed 2rpx #eeeeee;
    font-weight: bold;
}
.menu_item_food{
    display: flex;
    flex-direction: row;
    height: 187.9rpx;
    border-bottom: solid 3rpx #eeeeee;
    width: 100%;
    padding-top: 20.2rpx;
    padding-left: 25.8rpx;
}
.menu_item_food_img{
    width: 140.6rpx;
    height: 140.6rpx;
}
.menu_item_food_name_wrap{
    display: flex;
}
.food_change_wrap{
    display: flex;
    padding-top: 5rpx;
}
.menu_item_food_name{
    font-size: 31.3rpx;
    line-height: 56.3rpx;
    color: #7a7a7a;
    margin-left: 25rpx;
    margin-top: 2rpx;
    margin-right: 15.5rpx;
}
.tag{
    font-size: 31.3rpx;
    line-height: 56.3rpx;
    background-color: #F34B40;
    color: #ffffff;
    padding-left: 15rpx;
    padding-right: 15rpx;
    border-top-left-radius: 30% ;
    border-bottom-right-radius: 30%;
}
.leftNumber{
    margin-left: 32rpx;
    font-size: 23rpx;
    color: #7a7a7a;
}
.saleNumber{
    font-size: 23rpx;
    color: #7a7a7a;
}
.price_one{
    font-size: 31.3rpx;
    margin-left: 32rpx;
    color: #B8726A;
}
.price_numberal_measure{
    font-size: 24.3rpx;
}
.rebate{
    margin-left: 10rpx;
    font-size: 21.3rpx;
    padding-top: 14rpx;
    color: #7a7a7a;
    visibility: hidden;
}
.line{
    border-top: solid 1rpx #7a7a7a;
    color: #ffffff;
    position: relative;
    top: -13rpx;
}
.plus{
    position: relative;
    right: 40rpx;
    bottom: 5rpx;
    font-size: 50.8rpx;
    font-weight: bold;
    color: #F34B40;
    /* border: solid 6rpx #F34B40; */
    border-radius: 50%;
    width: 45.63rpx;
    height: 45.63rpx;
    line-height: 45.63rpx;
    text-align: center;
}

.reduce{
    position: relative;
    right: 70rpx;
    bottom: 5rpx;
    font-size: 50.8rpx;
    font-weight: bold;
    color: #F34B40;
    /* border: solid 6rpx #F34B40; */
    border-radius: 50%;
    width: 45.63rpx;
    height: 45.63rpx;
    line-height: 45.63rpx;
    text-align: center;
}
.number{
    font-size: 26.3rpx;
    position: relative;
    right: 55rpx;
    bottom: -5rpx;
}

