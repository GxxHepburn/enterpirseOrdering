@import "../../styles/fontAwesome.wxss";

page{
    height: 100%;
}
.main{
    position: relative;
    height: 100%;
    overflow-y: hidden;
}
.cart_wrap{
    position: fixed;
    display: flex;
    flex-direction: row;
    bottom: 0;
    width: 100%;
    height: 90.7rpx;
    background-color: #444444;
