@import "../../styles/fontAwesome.wxss";

.main{
    position: relative;
}
.top_wrap{
    margin-bottom: 90.7rpx;
}
.cart_wrap{
    position: fixed;
    display: flex;
    flex-direction: row;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90.7rpx;
    background-color: #444444;
}
page{
    height: 100%;
}
.main{
    position: relative;
    height: 100%;
    background-color: #f6f6f6;
}
.confirm{
    position: fixed;
    right: 0;
    line-height: 90.7rpx;
    color: #ffffff;
    background-color: #FF5140;
    width: 187.5rpx;
    text-align: center;
    font-size: 41.7rpx;
}
.icon{
    background-color: #333333;
    border-radius: 50%;
    line-height: 90.7rpx;
    width: 90.7rpx;
    text-align: center;
    position: fixed;
    bottom: 11.5rpx;
    left: 29.2rpx;
    font-size: 40.6rpx;
    color: #777777;
}
.icon_before{
    position: fixed;
    line-height: 109.4rpx;
    width: 109.4rpx;
    background-color: #444444;
    border-radius: 50%;
    bottom: 2.2rpx;
    color: #444444;
    left: 20.9rpx;
}
.price{
    line-height: 90.7rpx;
    position: fixed;
    left: 150rpx;
    color: #ffffff;
    bottom: 0;
    font-size: 41.3rpx;
}
.foods_wrap{
    background-color: #ffffff;
    margin-top: 43.75rpx;
    border-top: solid 1rpx #d9d9d9;
    border-bottom: solid 1rpx #d9d9d9;
}
.user{
    height: 162.5rpx;
    display: flex;
    line-height: 162.5rpx;
    padding-left: 33.38rpx;
    position: relative;
}
.user_img{
    width: 106.25rpx;
    height: 106.25rpx;
    position: absolute;
    top: 30rpx;
    border-radius: 50%;
    overflow: hidden;
}
.user_name{
    padding-left: 130rpx;
}
.foods_wrap{
    height: 100%;
}
.food_item{
    display: flex;
    margin-left: 33.38rpx;
    border-top: solid 1rpx #d9d9d9;
    height: 101.04rpx;
    line-height: 101.04prx;
    position: relative;
}

.cart_content_zero{
    margin-left: 30rpx;
    padding-left: 90rpx;
    height: 80rpx;
    line-height: 70rpx;
    font-size: 35rpx;
    border-top: solid 1rpx #eeeeee;
}
.cart_content_foodItem{
    display: flex;
    margin-left: 30rpx;
    border-top: solid 1rpx #eeeeee;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
}
.cart_modal_change_wrap{
    display: flex;
}
.cart_content_foodItem_property, .cart_content_foodItem_spec{
    font-size: 25rpx;
    color: #7a7a7a;
}
.cart_property_before{
    color: #7a7a7a;
    font-size: 25rpx;
}
.cart_modal_change_wrap{
    right: 0;
    width: 550%;
    position: absolute;
    text-align: center;
}
.cart_modal_price_one{
    position: absolute;
    right: 250rpx;
    font-size: 40rpx;
    color: #FF5140;
}
.cart_modal_reduce{
    position: absolute;
    right: 185rpx;
    font-size: 60rpx;
    font-weight: bold;
    color: #FF5140;
    line-height: 90rpx;
}
.cart_modal_number{
    position: absolute;
    right: 95rpx;
    font-size: 40rpx;
    text-align: center;
    width: 80rpx;
}
.cart_modal_plus{
    position: absolute;
    right: 45rpx;
    font-size: 60rpx;
    font-weight: bold;
    color: #FF5140;
    line-height: 90rpx;
}
.plusHover{
    color: #B8726A;
}
.reduceHover{
    color: #B8726A;
}
.confirm-hover{
    background-color: #eeeeee;
    color: #FF5140;
}
.caution_wrap{
    background-color: #FF5140;
    color: #ffffff;
    margin-bottom: 43rpx;
    padding-left: 30rpx;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}
.caution_top{
    padding-bottom: 30rpx;
    font-size: 37rpx;
}
.caution_bottom{
    font-size: 32rpx;
}
.order_wrap{
    margin-top: 43.75rpx;
    background-color: #ffffff;
    border-top: solid 1rpx #d9d9d9;
    border-bottom: solid 1rpx #d9d9d9;
}
.order_item, .total {
    margin-left: 32.29rpx;
    border-bottom: solid 1rpx #d9d9d9;
    height: 90.63rpx;
    line-height: 90.63rpx;
    position: relative;
}
.order_item_price{
    position: absolute;
    right: 32.29rpx;
    color: #888888;
}
.order_item_number{
    position: absolute;
    right: 200rpx;
    color: #888888;
}
.total_label{
    font-size: 30rpx;
}
.total_number, .total_price{
    color: #FF8041;
}
.total_small {
    font-size: 30rpx;
}